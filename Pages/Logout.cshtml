@page
@model FreshFarmMarket.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-danger text-white">
                    <h2>Logout</h2>
                </div>
                <div class="card-body text-center">
                    <p class="mb-4">Are you sure you want to log out?</p>

                    <form method="post" asp-antiforgery="true" onsubmit="return confirmLogout();">
                        <!-- removed reCAPTCHA hidden Field -->
                        <button type="submit" class="btn btn-danger btn-lg px-4">Logout</button>
                        <a href="/Index" class="btn btn-secondary btn-lg px-4">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            function confirmLogout() {
                return confirm("Are you sure you want to log out?");
            }
        </script>
}
